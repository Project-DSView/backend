# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
SERVER_ENV=development # development, production

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=db_password
DB_NAME=dsview_db
DB_SSLMODE=disable
DB_TIMEZONE=UTC

# RabbitMQ Configuration
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=admin
RABBITMQ_PASSWORD=admin
RABBITMQ_VHOST=/
RABBITMQ_EXCHANGE=dsview_exchange

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY_ID=minioadmin
MINIO_SECRET_ACCESS_KEY=minioadmin
MINIO_BUCKET_NAME=dsview
MINIO_USE_SSL=false
MINIO_PUBLIC_BUCKET=true
MINIO_MAX_FILE_SIZE=10MB

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Google OAuth Configuration (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:8080/auth/google/callback

# Frontend Configuration
FRONTEND_BASE_URL=http://localhost:3000
FRONTEND_AUTH_SUCCESS_PATH=/auth/success
FRONTEND_AUTH_ERROR_PATH=/auth/error

# FastAPI Configuration
FASTAPI_BASE_URL=http://fastapi:8000
FASTAPI_TIMEOUT=30s
FASTAPI_RETRY_COUNT=3
FASTAPI_RETRY_DELAY=1s
FASTAPI_HEALTH_CHECK=true

# API Key Configuration
API_KEY=your-api-key-change-this-in-production